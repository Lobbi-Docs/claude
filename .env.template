# Golden Armada Configuration Template
# Copy this file to .env and fill in your actual values

# Project Configuration
PROJECT_NAME=golden-armada

# GitHub Configuration
GITHUB_ORG=the-Lobbi
GITHUB_REPO=tools-golden-armada

# Docker Configuration
DOCKER_REGISTRY=golden-armada

# Kubernetes Configuration
K8S_NAMESPACE=agents

# Jira Configuration
JIRA_URL=https://your-domain.atlassian.net
JIRA_PROJECT_KEY=GA
JIRA_BOARD_ID=your-board-id
JIRA_API_TOKEN=your-jira-api-token
JIRA_EMAIL=your-email@example.com

# Confluence Configuration
CONFLUENCE_URL=https://your-domain.atlassian.net/wiki
CONFLUENCE_SPACE_KEY=GA

# n8n Configuration
N8N_BASE_URL=https://the-lobbi.app.n8n.cloud

# LLM API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key

# Supabase Configuration
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Vercel Configuration
VERCEL_TOKEN=your-vercel-token
VERCEL_TEAM_ID=your-vercel-team-id

# Upstash Configuration
UPSTASH_REDIS_REST_URL=your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token
UPSTASH_QSTASH_URL=your-upstash-qstash-url
UPSTASH_QSTASH_TOKEN=your-upstash-qstash-token

# Obsidian Vault Configuration
OBSIDIAN_VAULT_PATH=C:\Users\YourUsername\obsidian

# Optional: Playwright Configuration
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_HEADLESS=true

# Optional: Context7 Configuration
CONTEXT7_API_KEY=your-context7-api-key
