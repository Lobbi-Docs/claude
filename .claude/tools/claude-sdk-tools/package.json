{
  "name": "@claude-sdk/tools",
  "version": "1.0.0",
  "description": "Comprehensive custom tools library for Claude Agent SDK - 35+ production-ready MCP tools",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/tools/core/index.js",
      "types": "./dist/tools/core/index.d.ts"
    },
    "./api": {
      "import": "./dist/tools/api/index.js",
      "types": "./dist/tools/api/index.d.ts"
    },
    "./data": {
      "import": "./dist/tools/data/index.js",
      "types": "./dist/tools/data/index.d.ts"
    },
    "./system": {
      "import": "./dist/tools/system/index.js",
      "types": "./dist/tools/system/index.d.ts"
    },
    "./security": {
      "import": "./dist/tools/security/index.js",
      "types": "./dist/tools/security/index.d.ts"
    },
    "./testing": {
      "import": "./dist/tools/testing/index.js",
      "types": "./dist/tools/testing/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "agent-sdk",
    "ai-tools",
    "custom-tools"
  ],
  "author": "Brookside-Proving-Grounds",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "fast-xml-parser": "^5.3.3",
    "js-yaml": "^4.1.1",
    "jsonpath-plus": "^10.3.0",
    "papaparse": "^5.5.3",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.0",
    "@types/papaparse": "^5.5.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "tsx": "^4.20.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
