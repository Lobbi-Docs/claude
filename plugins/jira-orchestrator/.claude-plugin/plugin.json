  "agents": {
    "triage-agent": {
      "description": "First agent called when any Jira issue is detected - analyzes and routes to appropriate workflow",
      "model": "haiku",
      "handler": "agents/triage-agent.md"
    },
    "task-enricher": {
      "description": "Enriches Jira issues with technical details and context",
      "model": "sonnet",
      "handler": "agents/task-enricher.md"
    },
    "requirements-analyzer": {
      "description": "Analyzes requirements and creates implementation plans",
      "model": "sonnet",
      "handler": "agents/requirements-analyzer.md"
    },
    "code-reviewer": {
      "description": "Comprehensive code review with SOLID principles and clean architecture",
      "model": "opus",
      "handler": "agents/code-reviewer.md"
    },
    "pr-creator": {
      "description": "Creates and manages pull requests",
      "model": "haiku",
      "handler": "agents/pr-creator.md"
    },
    "documentation-writer": {
      "description": "Writes comprehensive documentation",
      "model": "haiku",
      "handler": "agents/documentation-writer.md"
    },
    "council-coordinator": {
      "description": "Orchestrates multi-agent reviews using blackboard pattern",
      "model": "sonnet",
      "handler": "agents/council-coordinator.md"
    },
    "infrastructure-orchestrator": {
      "description": "Expert in creating modular Harness repos, Helm, Terraform, K8s",
      "model": "opus",
      "handler": "agents/infrastructure-orchestrator.md"
    },
    "code-quality-enforcer": {
      "description": "Expert agent for enforcing SOLID principles, clean code standards, and architectural patterns",
      "model": "opus",
      "handler": "agents/code-quality-enforcer.md"
    },
    "harness-api-expert": {
      "description": "Expert agent for Harness REST API operations",
      "model": "sonnet",
      "handler": "agents/harness-api-expert.md"
    },
    "harness-jira-sync": {
      "description": "Synchronizes Harness and Jira data",
      "model": "sonnet",
      "handler": "agents/harness-jira-sync.md"
    }
  },
  "skills": {
    "triage": {
      "description": "Jira Issue Triage and Routing - Intelligent classification, prioritization, and routing",
      "handler": "skills/triage/SKILL.md"
    },
    "jira-orchestration": {
      "description": "Jira orchestration workflows and patterns",
      "handler": "skills/jira-orchestration/SKILL.md"
    },
    "harness-ci": {
      "description": "Harness CI skill for container-native builds, test intelligence, caching",
