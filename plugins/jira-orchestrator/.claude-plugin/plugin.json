{
  "name": "jira-orchestrator",
  "version": "7.1.0",
  "description": "Comprehensive Jira orchestration plugin with 68 agents, 43 commands, 11 skills, and automated hook-based workflows. Features Harness platform integration, SOLID/clean architecture enforcement, and multi-agent collaboration patterns.",
  "author": "Ahling Tech",
  "license": "MIT",
  "keywords": [
    "jira",
    "orchestration",
    "atlassian",
    "harness",
    "ci-cd",
    "workflow",
    "automation",
    "agents",
    "clean-architecture",
    "solid"
  ],
  "categories": [
    "orchestration",
    "project-management",
    "devops",
    "integration"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/markus41/claude/tree/main/plugins/jira-orchestrator"
  },
  "commands": {
    "work": {
      "description": "Start orchestrated work on issue (THE main command)",
      "handler": "commands/work.md"
    },
    "ship": {
      "description": "One command: prepare → code → PR → review → merge",
      "handler": "commands/ship.md"
    },
    "status": {
      "description": "Check progress, show dashboard, metrics",
      "handler": "commands/status.md"
    },
    "pr": {
      "description": "Create/manage PRs with automatic review",
      "handler": "commands/pr.md"
    },
    "iterate": {
      "description": "Fix review feedback, update PR, re-review",
      "handler": "commands/iterate.md"
    },
    "cancel": {
      "description": "Cancel with checkpoint for resume",
      "handler": "commands/cancel.md"
    },
    "sprint": {
      "description": "Sprint planning, metrics, quality, team capacity",
      "handler": "commands/sprint.md"
    },
    "enterprise": {
      "description": "Enterprise features (notifications, approvals, compliance)",
