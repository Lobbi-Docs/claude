  "hooks": {},
  "configuration": {
    "localConfig": "config/presets.json",
    "requiredEnvVars": [
      "ATLASSIAN_INSTANCE_URL",
      "ATLASSIAN_EMAIL",
      "ATLASSIAN_API_TOKEN"
    ],
    "optionalEnvVars": [
      "JIRA_PROJECT_KEY",
      "OBSIDIAN_VAULT_PATH",
      "HARNESS_API_KEY",
      "HARNESS_ACCOUNT_ID"
    ]
  },
  "resources": {
    "registry": {
      "agents": "registry/agents.index.json",
      "commands": "registry/commands.index.json",
      "workflows": "registry/workflows.index.json"
    },
    "config": {
      "presets": "config/presets.json",
      "flags": "config/flags.json",
      "agent-teams": "config/agent-teams.yaml"
